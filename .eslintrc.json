{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "flowtype"
  ],
  "settings": {
    "react": {
      "version": "16.5.2"
    }
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true }
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": [
    	"warn"
    ],
    "no-unused-vars": [
      "error",
      { "varsIgnorePattern": "[iI]gnored"}
    ],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "flowtype/generic-spacing": [
      "off"
    ]
  }
}